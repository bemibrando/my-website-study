{
    "compilerOptions": {
        "baseUrl": "./src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "noEmitOnError": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es6",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "lib": [
            "es2015",
            "dom",
            "es2016",
            "es2017",
            "esnext"
        ],
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    }
}